<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="#1888CE"/>
            <stroke
                android:width="0dp"
                android:color="@color/colorPrimaryDark"/>
            <corners
                android:radius="16dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="#77C7F7"/>
            <stroke
                android:width="0dp"
                android:color="@color/colorPrimaryDark"/>
            <corners
                android:radius="16dp"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <solid
                android:color="#1DA1F2"/>
            <stroke
                android:width="0dp"
                android:color="@color/colorPrimaryDark"/>
            <corners
                android:radius="16dp"/>
        </shape>
    </item>
</selector>